DAEMON=/usr/bin/aptly
UID=aptly

status() {
	if pgrep -u ${UID} ${DAEMON}
	then
		echo "service is running"
	else
		echo "service is NOT running"
	fi
}

start() {
	sudo -u ${UID} ${DAEMON} serve -listen={{ syskit_aptly_dl_address }}:{{ syskit_aptly_dl_port }} &
	sudo -u ${UID} ${DAEMON} api serve -listen={{ syskit_aptly_api_address }}:{{ syskit_aptly_api_port }} &
}

stop() {
	killall -u ${UID} ${DAEMON}
}

for arg
do
	case $arg in
		status)
			status;;
		start)
			start;;
		stop)
			stop;;
		*)
			echo "Poorman aptly service manager"
			echo
			echo "Usage:"
			echo "  $0 (status|start|stop)..."
			exit 1
	esac
done

